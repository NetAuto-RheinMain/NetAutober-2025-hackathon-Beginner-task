{
    "name": "NetAutober Beginner Task",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "bash"
        },
        "extensions": [
          "ms-azuretools.vscode-docker",
          "redhat.ansible",
          "oderwat.indent-rainbow"
        ]
      }
    },
    "remoteUser": "vscode",
    "postCreateCommand": [
      "echo '[defaults]' > ~/.ansible.cfg",
      "echo 'inventory = ansible/inventory.ini' >> ~/.ansible.cfg",
      "echo 'collections_paths = /usr/share/ansible/collections' >> ~/.ansible.cfg",
      "echo 'host_key_checking = False' >> ~/.ansible.cfg",
      "echo 'retry_files_enabled = False' >> ~/.ansible.cfg",
      "echo 'stdout_callback = yaml' >> ~/.ansible.cfg",
      "echo 'timeout = 10' >> ~/.ansible.cfg"
    ]
  }
  